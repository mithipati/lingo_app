<% provide(:title, @group.name) %>
<%= link_to "Back to Groups", groups_path %>
<h3>
  <%= @group.name %>
</h3>
<%= @group.description %>

<div id="word-form">
  <%= form_for(@word, remote: true) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.label :definition %><br>
    <%= f.text_area :definition %>
    <%= f.submit 'Create', class: "btn btn-large btn-primary"%>
  <% end %>
</div>

<div id="word-container">
  <div id="words">
    <%= render @words %>
  </div>
</div>



