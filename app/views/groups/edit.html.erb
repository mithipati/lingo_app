<h1>Edit group</h1>
<div class="row">
  <div class="large-6 columns">
    <%= render 'shared/error_messages' %>
    <%= form_for(@group) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
