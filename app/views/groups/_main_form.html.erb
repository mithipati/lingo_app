<%= form_for([@group, Word.new], remote: true) do |f| %>
  <div class='loginForm'>
    <%= f.label :name, "Word" %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    <%= f.label :definition %>
    <%= f.text_area :definition, class: 'form-control word-definition' %>

    <%= fields_for(@meme) do |fa| %>
      <div class='meme-select'>
        <%= fa.label :image, "Meme" %>
        <%= fa.collection_select(:image,@response.body,:to_s,:to_s,
        { :include_blank => 'Select a meme ...' }) %>
      </div>
      <%= fa.label :top, "Top text" %>
      <%= fa.text_field :top, class: 'form-control' %>
      <%= fa.label :bottom, "Bottom text" %>
      <%= fa.text_field :bottom, class: 'form-control' %>
  </div>
    <% end %>
  <%= f.submit 'Create', class: "btn btn-lg btn-default userButton", style: 'margin-top: 3rem' %>
<% end %>
