<h1>
  Hello, <%= @user.name %>!
</h1>
<div class="fluid-container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="image-space">
        <%= image_tag @user.profile_pic_url, class: "profile-pic-show" %>
      </div>
    </div>
    <div class="col-xs-12 col-md-8">
      <div class="panel panel-info user-group">
        <div class="panel-heading">
          <h3>My Groups</h3>
        </div>
        <div class="panel-body">
          <h5>
            <% if @groups.blank? %>
              Follow groups and they will appear here!
            <% end %>
          </h5>
          <h4>
            <% @groups.each do |group| %>
              <%= link_to group.name, group_path(group), style: 'margin-left: 1.5rem;' %>
            <% end %>
          </h4>
        </div>
      </div>
      <div class='addGroups'>
      <h4>Follow groups:  </h4><%= link_to "", groups_path, class: 'btn btn-lg btn-default fa fa-group userButton' %>
      </div>
    </div>

  </div>
</div>

